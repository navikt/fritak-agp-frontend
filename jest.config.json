{
  "rootDir": "./src",
  "globals": {
    "window": true
  },
  "transform": {
    "^.+\\.tsx?$": "ts-jest"
  },
  "transformIgnorePatterns": ["node_modules/(?!(msw))"],
  "collectCoverage": true,
  "coverageDirectory": "../coverage",
  "coveragePathIgnorePatterns": [],
  "coverageThreshold": {
    "global": {
      "branches": 50,
      "functions": 50,
      "lines": 50,
      "statements": 50
    }
  }
}
